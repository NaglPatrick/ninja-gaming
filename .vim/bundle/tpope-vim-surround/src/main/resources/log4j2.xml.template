<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug" name="MyCalculator">
    <Appenders>
        <File name="MyFile" fileName="logs/myapp.log">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="MyFile"/>
        </Root>
    </Loggers>
</Configuration>